<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MFT_RIDER" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/peach</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/hint_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- system navigation bar color-->
        <!--        <item name="android:navigationBarColor">@color/transparent</item>-->
        <!-- Customize your theme here. -->
    </style>

    <!-- splash theme -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- system navigation bar color-->
        <!--        <item name="android:navigationBarColor">@android:color/transparent</item>-->
    </style>
    <!--  End of splash theme -->

    <!-- progres bar theme -->
    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/maroon</item>
    </style>

    <!-- Navigatio theme -->
    <style name="Navigation" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/faded</item>
        <item name="colorControlHighlight">@color/faded</item>
    </style>

    <style name="NavigationDrawer" parent="ThemeOverlay.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlActivated">@color/faded</item>
        <item name="colorControlHighlight">@color/faded</item>
    </style>

    <!-- My toolbar theme -->
    <style name="AppTheme.Mytoolbar" parent="@style/ThemeOverlay.AppCompat.Dark">

        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/peach</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColor">@color/black</item>

        <!-- change textColorPrimary to reflect toolbar text color -->
        <item name="drawerArrowStyle">@style/DrawerIcon</item>
        <item name="fontFamily">sans-serif-condensed-medium</item>
        <item name="actionOverflowButtonStyle">@style/MyOverflowButtonStyle</item>
    </style>
    <!-- change drawerIcon to reflect drawer icon color -->
    <style name="DrawerIcon" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/black</item>
    </style>

    <style name="MyOverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:tint">@color/black</item>
    </style>


    <!-- bottom sheet styling -->
    <!-- set the rounded drawable as background to your bottom sheet -->
    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />
    <!-- end of bottom shhet styling -->

</resources>