<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="@dimen/radius"
    app:cardBackgroundColor="@color/faded"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:padding="5dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/hundred_twenty"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/radius"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/peach">

            <ImageView
                android:id="@+id/imageview"
                android:layout_width="match_parent"
                android:src="@drawable/gift"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/suborder_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="15dp"
                android:text="Item"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginBottom="@dimen/three"
                android:gravity="bottom"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/accept_btn"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="@dimen/fourty"
                    android:layout_marginStart="@dimen/ten"
                    android:layout_marginEnd="@dimen/ten"
                    app:cardBackgroundColor="@color/maroon"
                    app:cardCornerRadius="@dimen/radius"
                    app:cardElevation="0dp">

                    <TextView
                        android:id="@+id/acpt_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|center_vertical|center_horizontal"
                        android:text="@string/btn_upload"
                        android:textColor="@color/white"
                        android:textStyle="bold" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
